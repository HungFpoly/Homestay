    </div>


      <% if(success_msg != ''){ %>
      <div class=""><%= success_msg%></div>
      <% } %>
      <% if(errors) { %>
      <div class="">
        <% errors.forEach(function(e){ %>

        <%= e.msg %> <br />
        <%});%>

      </div>
      <% };%>
      <div class="send-message">
        <div class="container">
          <div class="row">
            <div class="col-md-8">
              <div class="section-heading">
                <h2>Contact Us</h2>
              </div>
            </div>
            <div class="row">
              <% if(success_msg != ''){ %>
              <div class="alert alert-success"><%= success_msg%></div>
              <% } %>
              <% if(errors) { %>
              <div class="alert alert-danger">
                <% errors.forEach(function(e){ %>

                <%= e.msg %> <br />
                <%});%>

              </div>
              <% };%>
              <div class="col-md-12">
                <div class="contact-form">
                  <form id="contact" action="" method="post">
                    <div class="row">
                      <div class="col-lg-8 col-md-12 col-sm-12">
                        <fieldset>

                          <input name="name" type="text" class="form-control" id="name" placeholder="Full Name"
                            required="">
                        </fieldset>
                      </div>
                      <div class="col-lg-8 col-md-12 col-sm-12">
                        <fieldset>
                          <input name="email" type="text" class="form-control" id="email" placeholder="E-Mail Address"
                            required="">
                        </fieldset>
                      </div>
                      <div class="col-lg-8 col-md-12 col-sm-12">
                        <fieldset>
                          <input name="phone" type="text" class="form-control" id="phone" placeholder="Phone"
                            required="">
                        </fieldset>
                      </div>
                
                      <div class="col-lg-8">
                        <fieldset>
                          <textarea name="message" rows="6" class="form-control" id="message" placeholder="Your Message"
                            required=""></textarea>
                        </fieldset>
                      </div>
                      <div class="col-lg-8">
                        <fieldset>

                          <button class="filled-button" type="submit" value="Submit" id="submit_id"> Submit</button>
                          <button class="filled-button" type="reset" value="Reset"> Reset</button>
                        </fieldset>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <div class="col-md-4">
                <p>Homestay Fpoly 2018

                  <br>Email: homestayfpoly2018@gmail.vn
                  <br>HotLine:028349298
                  <br></p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
